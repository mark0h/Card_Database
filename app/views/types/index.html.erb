<h1 align='center'>Listing of Card Types</h1>
<div align='center'>
	<%= will_paginate %>
	<% @types.each do |type| %>
	  <ul class='listing'>
	  	<div class='row'>
	  		<div class='well col-md-4 col-md-offset-4'>
			  	<li class='type-value'><%= link_to "#{type.name}", type_path(type) %></li>
			  	<li><%= pluralize(type.cards.count, "Cards") %></li>
			  </div>
			</div>
	  </ul>
	<% end %>
	<%= will_paginate %>
</div>
