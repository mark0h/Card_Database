<h1 align="center">Cards with trait: <font style='color:red;'><%= @trait.name %></font></h1>

<div class='panel panel-card_group'>
	<div class='panel-body'>
		<% @card_list.each_with_index do |card, index| %>
			
			<% if index%2==0 %>

					 <br>
					 <div class='row'>
						 <div class='col-md-6'>
							<div class="panel panel-info panel-card">
							  <div class="panel-heading card-name clearfix">
							  	<%= link_to card.name, card_path(card) %>
							  </div>
							  <div class='pull-right'><small><%= link_to 'Edit', edit_card_path(card) %></small></div>
							  <div class="panel-body">

								    <% get_traits(card.id) %>
								    <!-- <div class='well well-sm'> -->
								    	<table class='table table-striped'>
										    <% @trait_values.each do |trait_name, trait_values| %>

										      <tr>
										      	<td class='trait-display-name'><%= link_to trait_name, trait_path(trait_values[1])  %>:</td>
										      	<td class='trait-display-value'><%= trait_values[0] %></td>
										      </tr>									      
										    
										    <% end %>	
									    </table> 
								    <!-- </div>  -->

								  </div>
								</div>
							</div>

				 	<% else %>

					 	<div class='col-md-6'>
							<div class="panel panel-info panel-card">
							  <div class="panel-heading card-name clearfix">
							  	<%= link_to card.name, card_path(card) %>
							  </div>
							  <div class='pull-right'><small><%= link_to 'Edit', edit_card_path(card) %></small></div>

							  <div class="panel-body">

								    <% get_traits(card.id) %>
								    <!-- <div class='well well-sm'> -->
								    	<table class='table table-striped'>
										    <% @trait_values.each do |trait_name, trait_values| %>

										      <tr>
										      	<td class='trait-display-name'><%= link_to trait_name, trait_path(trait_values[1])  %>:</td>
										      	<td class='trait-display-value'><%= trait_values[0] %></td>
										      </tr>									      
										    
										    <% end %>	
									    </table> 
								    <!-- </div>  -->

								  </div>

							</div>
						</div>
					</div>

				 	<% end %>

		<% end %>

	</div>
</div>