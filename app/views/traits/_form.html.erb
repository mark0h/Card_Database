<%= render 'shared/errors', obj: @trait %>

<%= form_for(@trait, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

	<div class='form-group'>
		<div class='control-label col-sm-2'>
			<%= f.label :name %>
		</div>
		<div class='col-sm-4'>
			<%= f.text_field :name, class: 'form-control', placeholder: 'Enter a trait' %>
		</div>
	</div>

	<div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label 'Card Type' %>
    </div>
    <div class='col-sm-8'>
      <%= f.collection_select :type_id, Type.order(:name), :id, :name, {include_blank: true}, {class: 'card_type_selector'} %>
    </div>
  </div>

  <div class='form-group'>
  	<div class='col-sm-offset-2 col-sm-10'>
  		<%= f.submit class: 'btn btn-success btn-lg' %>
  	</div>
  </div>

	<% end %>