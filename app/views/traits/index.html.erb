<h1 align='center'>Listing of Card Traits</h1>
<div align='center'>
	<%= will_paginate %>
	<% @traits.each do |trait| %>
	  <ul class='trait-listing'>
	  	<div class='row'>
	  		<div class='well col-md-4 col-md-offset-4'>
			  	<li><font  class='trait-display-name'><%= link_to "#{trait.name}", trait_path(trait) %></font> (<%= pluralize(trait.cards.count, "Cards") %>)</li>
			  	<% type_value = Type.where(id: trait.type_id).first %>
			  	<li>Card Type: <%= link_to "#{type_value.name}", type_path(type_value) if type_value %></li>
			  </div>
			</div>
	  </ul>
	<% end %>
	<%= will_paginate %>
</div>

